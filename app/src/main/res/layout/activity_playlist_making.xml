<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin_playlists"
    android:paddingLeft="@dimen/activity_horizontal_margin_playlists"
    android:paddingRight="@dimen/activity_horizontal_margin_playlists"
    android:paddingTop="@dimen/activity_vertical_margin_playlists"
    tools:context="mattnkev.cs.tufts.edu.musicmafia.activities.PlaylistMakingActivity">

    <FrameLayout
        android:id="@+id/listFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBar"/>

    <com.roughike.bottombar.BottomBar
        android:id="@id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:bb_tabXmlResource="@xml/bottom_bar_tabs" />
</RelativeLayout>


